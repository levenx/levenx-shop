/* pages/shopCar/shopCar.wxss */

page {
  background: rgb(240, 240, 240);
}

.shopcar-btn {
  width: 30px !important;
  min-width: 30px !important;
  height: 30px !important;
}

.delete {
  background: red;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 65px;
  height: 100%;
  font-size: 1.1rem;
  color: #fff;
}

.bottom-button {
  width: 160px;
  height: 40px;
}

.shop-card {
  background: #fff;
  margin: 0.5rem 0 0 0;
  min-height: 6rem;
  display: flex;
  align-items: center;
  padding: 0 0.5rem;
  position: relative;
}

.shop-card image {
  height: 5rem;
  width: 5rem;
  margin: 0 0.7rem;
  border-radius: 10px;
  box-shadow: 0 0 5px 5px rgb(240, 240, 240);
}

.card-detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 5rem;
  font-size: 0.8rem;
  font-weight: 700;
}

.stepper {
  position: absolute;
  right: 10px;
  bottom: 10px;
}

.loading {
  position: absolute;
  top: 30%;
  left: 45%;
  color: #fff;
}
